{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}



{% block body %}
<style type="text/css">
div.box {
  width: 780px;
  padding: 20px;
  border: 5px solid white;
  background-color: white;
  margin-top: 10px;
  box-shadow: 8px 8px 12px #aaa;
}
body {
  width: all;
  height: all;
  background-color: rgb(105,99,90);
}
h1{
    color: blue;
}
</style>
<div class="row">
  <div class="col-4">
    <div class="list-group" id="list-tab" role="tablist">
      <h1 class="list-group-item list-group-item-action active">User Index</h1>
       <a class="list-group-item list-group-item-action" href="{{ path('user_new') }}" role="tab">Create New User</a>
      <a class="list-group-item list-group-item-action" href="{{path('app_dashboard') }}" role="tab">Back to dashboard</a>
      <a class="list-group-item list-group-item-action" href="{{path('app_logout') }}" role="tab" >Logout</a>
  
    </div>
  </div>
<center><div class="box">
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="row">Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>
               <a href="{{ path('user_show', {'id': user.id}) }}"><svg class="bi bi-eye-fill" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
               <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0z"/>
              <path fill-rule="evenodd" d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8zm8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7z"/>
                </svg>show</a>
              <a href="{{ path('user_edit', {'id': user.id}) }}"><svg class="bi bi-brush" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
              <path d="M15.213 1.018a.572.572 0 0 1 .756.05.57.57 0 0 1 .057.746C15.085 3.082 12.044 7.107 9.6 9.55c-.71.71-1.42 1.243-1.952 1.596-.508.339-1.167.234-1.599-.197-.416-.416-.53-1.047-.212-1.543.346-.542.887-1.273 1.642-1.977 2.521-2.35 6.476-5.44 7.734-6.411z"/>
              <path d="M7 12a2 2 0 0 1-2 2c-1 0-2 0-3.5-.5s.5-1 1-1.5 1.395-2 2.5-2a2 2 0 0 1 2 2z"/>
            </svg>edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div></center>
{% endblock %}
